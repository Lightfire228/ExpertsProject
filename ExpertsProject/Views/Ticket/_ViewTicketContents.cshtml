@model ExpertsProject.Models.TicketViewModels.TicketContentsViewModel

<style type="text/css" media="all">
    table.mytable {
        border-spacing: 50px; /*use to work like cellspacing */
        width: 500px;
        height: 20px;
    }

    tr:nth-child(even) {
        background-color: rgb(0, 244, 102);
    }

    tr:nth-child(odd) {
        background-color: none;
    }

    /*use to work like cellpadding */
    th, td {
        padding: 5px;
    }
</style>

<h2>@Html.Encode(Model.Ticket.Title)</h2>
<h3>Created by: @Html.Encode(Model.Ticket.User.Name)</h3>

<table class="mytable">
    @foreach (var message in Model.Messages) {

    <tr>
        <td>
            <b>User: </b>@Html.Encode(message.User.Name)
        </td>
        <td>
            <b>Date posted: </b>@Html.Encode(message.Date)
        </td>
    </tr>
    <tr>
        <td colspan="2">
            @Html.Encode(message.BodyText)
        </td>
    </tr>
    }
</table>

