@model ExpertsProject.Models.UserViewModels.SearchStringViewModel

@using (Html.BeginForm("Search", "User", FormMethod.Post, new { @class = "table" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.SearchText, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.SearchText, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}